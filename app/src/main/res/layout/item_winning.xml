<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iphone6s" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_issue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期号:" />

            <TextView
                android:id="@+id/tv_issueNuber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1859" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_participation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本期参与:" />

            <TextView
                android:id="@+id/tv_participationNuber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11人次" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_prize_winner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获奖者:" />

            <TextView
                android:id="@+id/tv_prize_winnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="66" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_in_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共参与了:" />

            <TextView
                android:id="@+id/tv_in_allNuber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10次" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lucky_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幸运号码:" />

            <TextView
                android:id="@+id/tv_lucky_numberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1859" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="参与详情" />
</LinearLayout>
